            <!--<PanCake:PancakeView
                    Margin="0,0,0,0"
                    Padding="0,0,0,0"
                    BackgroundColor="White"
                    CornerRadius="40,40,0,0"
                    VerticalOptions="FillAndExpand">-->


                <ListView   
                        x:Name="ListaDeNotas"  
                        RowHeight="55"
                        HasUnevenRows="True" 
                        CachingStrategy="RecycleElement"
                       ItemTapped="ListaDeNotas_ItemTapped"
                        SeparatorColor="Gray">


                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="40"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0" 
                                           Grid.Column="0" 
                                           Text="{Binding Titulo}"  
                                           LineBreakMode="TailTruncation"
                                           FontSize="15"
                                           TextColor="Black"
                                           FontAttributes="Bold"/>

                                        <Label Grid.Row="1" Grid.Column="0" 
                                           Text="{Binding Nota}"  
                                            FontSize="12"  
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"
                                           TextColor="#999999"/>

                                        <StackLayout Grid.Row="0" Grid.RowSpan="2" 
                                                     Grid.Column="1" >

                                            <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" TextColor="#627AAD">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Data_Nota}" FontSize="6" FontAttributes="Bold"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                        </StackLayout>
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            <!--</PanCake:PancakeView>-->


            <!--<ActivityIndicator x:Name="IndicadorDeActividade" 
